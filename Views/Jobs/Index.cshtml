@model IEnumerable<jobaffair.Models.Job>

<br />
<br />
<br />
<p>
    @Html.ActionLink("اضافة وظيفة جديدة", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.JobContent).ToString()))
            @*@Html.DisplayFor(modelItem => item.JobContent)*@
        </td>
        <td>
            <img src="~/uploads/@Html.DisplayFor(modelItem => item.JobImage)" class="thumbnail" style="width:50px ; height:50px ;" />
           
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
